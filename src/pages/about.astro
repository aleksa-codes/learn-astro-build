    <Image
      src={logos}
      alt=''
      class='hidden md:flex rounded-lg h-16 w-auto'
      width={512}
      height={64}
    />
    <Image
      src={logosSmall}
      alt=''
      class='md:hidden rounded-lg h-16 w-auto mx-auto'
