---
export interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props as Props;
---

<!-- card with tailwindcss, title and body -->
<div class='bg-white shadow-md rounded-lg border w-full'>
  <div class='px-4'>
    <div class='text-2xl font-semibold text-gray-900 mt-4'>
      {title}
    </div>
    <div class='mt-2 text-base text-gray-600'>
      <p>
        {body}
      </p>
    </div>
  </div>
</div>
