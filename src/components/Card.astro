---
export interface Props {
  title?: string;
  body?: string;
  link?: string;
  blogPost?: boolean;
}

const { title, body, link, blogPost } = Astro.props as Props;
---

<!-- card with tailwindcss, title and body -->
<div class='bg-white shadow-md rounded-lg border w-full mt-4 mb-2'>
  <div class='p-4'>
    { blogPost && (
      <div class='text-left pb-4 pt-2'>
      <!-- a tag styled as a black block button no decoration -->
      <a
        href='/first-astro-site/blog'
        class='bg-black text-white font-semibold no-underline rounded-lg px-4 py-2 inline-block hover:bg-gray-800'
      >
        <span>Go Back</span>
      </a>
    </div>
    )
    }
    <div class='text-2xl font-semibold text-gray-900 mt-4'>
      {title}
    </div>
    <div class='mt-2 text-base text-gray-600'>
      <p>
        {
          body || <slot />
        }
      </p>
    </div>
    {link && (
    <div class='text-left pb-4 pt-2'>
      <!-- a tag styled as a black block button no decoration -->
      <a
        href={link}
        class='bg-black text-white font-semibold no-underline rounded-lg px-4 py-2 inline-block hover:bg-gray-800'
      >
        <span>Read More</span>
      </a>
    </div>
    )
    }
  </div>
</div>
